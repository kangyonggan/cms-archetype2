        <version>${version}</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>${artifactId}</artifactId>

    <description>业务逻辑层</description>
    <name>Module :: Biz</name>

    <dependencies>
        <!--Slef-->
